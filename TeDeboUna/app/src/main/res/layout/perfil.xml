<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/windowBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/background_card"
        android:elevation="4dp"
        android:layout_margin="16dp"
        android:layout_gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo1"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/editImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Editar imagen"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="16dp" />

        <!-- Título para la sección de habilidades -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sección de Habilidades"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/skillsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Habilidades e información"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/editSkillsButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar habilidades e información"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorPrimary" />

    </LinearLayout>

</ScrollView>
